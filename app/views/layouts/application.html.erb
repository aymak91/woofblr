<!DOCTYPE html>
<html>
  <head>
    <title>woofblr</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script src="https://kit.fontawesome.com/16e486a6fa.js" crossorigin="anonymous"></script>
    <script>
        window.defaultAvatar = "<%= image_url('default-avatar.jpg') %>"
    </script>
  </head>

  <% if logged_in? %>
    <script>
        window.currentUser = <%= render(
            "api/users/user.json.jbuilder",
            user: current_user 
        ).html_safe %>
    </script>
  <% end %> 

  <body class="body">
    <%= yield %>
  </body>
</html>
